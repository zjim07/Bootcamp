<!DOCTYPE suite SYSTEM "https://testng.org/testng-1.0.dtd" >

<suite name="AutomationPractice" verbose="1" >

    <listeners>
        <listener class-name="listeners.AnnotationTransformer"/>
    </listeners>

    <parameter name="browser" value="chrome"/>
    <parameter name="url" value="http://automationpractice.com"/>

    <test name="Smoke - End_To_End">
        <classes>
            <class name="test_app.smoke.end_to_end.TestEndToEnd"/>
        </classes>
    </test>

    <test name="Smoke - Transactions">
        <classes>
            <class name="test_app.smoke.transactions.TestAddingItemsToCart"/>
        </classes>
    </test>

    <test name="Functionality - Filters">
        <classes>
            <class name="test_app.functionality.TestFilters"/>
        </classes>
    </test>

    <test name="Functionality - Search Function">
        <classes>
            <class name="test_app.functionality.TestSearchFunction"/>
        </classes>
    </test>

    <test name="ContactUs">
        <classes>
            <class name="pom.TestContactUs"/>
        </classes>
    </test>

</suite>
